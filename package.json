{
  "name": "whu-court",
  "private": true,
  "scripts": {
    "dev": "lerna run --scope @whu-court/cli dev",
    "start": "lerna run --scope @whu-court/cli start",
    "build": "lerna run --stream build",
    "c": "git commit --no-edit",
    "eslint-all": "eslint packages/ --ext .js,.ts,.tsx",
    "eslint-all:fix": "yarn eslint-all --fix",
    "processCommitMsg": "lerna run --scope @whu-court/tools processCommitMsg -- $(pwd)",
    "test": "lerna run --stream test",
    "test:changed": "yarn test --since $(lerna run --scope @whu-court/tools getRemoreRef)",
    "husky:prepare": "is-ci || husky install .config/.husky",
    "check:node-version": "lerna run --scope @whu-court/tools check:node-version -- $(pwd)",
    "prepare": "yarn check:node-version && yarn husky:prepare",
    "postinstall": "yarn prepare",
    "ci:test": "yarn test --since origin/master",
    "ci:eslint": "yarn eslint-all",
    "ci:run": "is-ci && npm-run-all -p -l ci:eslint ci:test",
    "cd:test": "yarn test",
    "cd:eslint": "yarn eslint-all",
    "cd:prepare": "is-ci && npm-run-all -p -l cd:eslint cd:test",
    "cd:release": "is-ci && lerna run --scope @whu-court/tools cd:releaseVersion"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "commitizen": "^4.2.4",
    "commitlint": "^17.0.2",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.16.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-n": "^15.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.0",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "oclif": "^3.0.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "4.3.5"
  },
  "packageManager": "yarn@3.2.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.config/commitizen.js"
    }
  },
  "commitlint": {
    "extends": [
      "cz"
    ],
    "rules": {
      "type-empty": [
        2,
        "never"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "./.config/eslint-config.js"
    ],
    "ignorePatterns": [
      "dist"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "resolutions": {
    "mocha": "^9.2.2",
    "ts-node": "^10.8.0"
  }
}
