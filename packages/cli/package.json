{
  "name": "@whu-court/cli",
  "version": "0.0.4-beta.8",
  "description": "CLI interface for WHU Court",
  "author": "cstao.cn@icloud.com",
  "bin": {
    "wcr": "./bin/run"
  },
  "homepage": "https://github.com/CS-Tao/whu-court",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "CS-Tao/whu-court",
  "files": [
    "bin",
    "dist",
    "!dist/**/*.map",
    "npm-shrinkwrap.json",
    "oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-autocomplete": "^1.3.0",
    "@oclif/plugin-help": "^5",
    "@whu-court/auto-update": "0.0.4-beta.8",
    "@whu-court/http": "0.0.4-beta.8",
    "@whu-court/mock": "0.0.4-beta.8",
    "@whu-court/reporter": "0.0.4-beta.8",
    "@whu-court/runtime": "0.0.4-beta.8"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "chai": "^4",
    "chalk": "4.1.2",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "globby": "^11",
    "mocha": "^9",
    "oclif": "^3",
    "shx": "^0.3.4",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "oclif": {
    "bin": "wcr",
    "dirname": "wcr",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "topics": {
      "config": {
        "description": "管理配置项"
      },
      "login": {
        "description": "登录"
      },
      "logout": {
        "description": "注销"
      },
      "run": {
        "description": "开始预约"
      }
    }
  },
  "scripts": {
    "dev": "./bin/dev",
    "start": "./bin/run",
    "clean": "shx rm -rf dist",
    "build": "yarn clean && tsc",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": "https://github.com/CS-Tao/whu-court/issues",
  "keywords": [
    "wcr"
  ],
  "publishConfig": {
    "access": "public"
  }
}
