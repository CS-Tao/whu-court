  },
  "files": [
    "dist",
    "!dist/**/*.map"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@whu-court/env": "0.1.7-beta.1",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@types/update-notifier": "^5.1.0"
  }
}
